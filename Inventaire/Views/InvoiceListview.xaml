<UserControl x:Class="BillingManagement.UI.Views.InvoiceListview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BillingManagement.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListView Grid.Row="1" ItemsSource="{Binding Invoices}" IsSynchronizedWithCurrentItem="True"
                          SelectedItem="{Binding SelectedInvoice}"
                          x:Name="lvCustomers">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding InvoiceId}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
            
    </Grid>
</UserControl>
